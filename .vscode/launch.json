    "configurations": [
        {
            "name": "Debug Kernel",
            "type": "gdb",
            "request": "attach",
            "executable": "./bin/kernel.elf",
            "target": ":1234",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
